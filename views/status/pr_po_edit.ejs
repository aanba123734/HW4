<!DOCTYPE html>
<html>
<head>
    <title>Edit Process Status</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="status-box">
                    <h2 class="mb-4">Edit Process Status</h2>
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> 
                        Changing status here forces the workflow state. Use with caution.
                    </div>
                    
                    <form action="/status/pr-po/<%= data.pr_id %>?_method=PUT" method="POST">
                        
                        <div class="row">
                            <div class="col-md-4 border-end">
                                <h5 class="text-secondary">Purchase Request</h5>
                                <div class="mb-3">
                                    <label>PR Number</label>
                                    <input type="text" class="form-control" value="<%= data.pr_number %>" disabled>
                                </div>
                                <div class="mb-3">
                                    <label>PR Status</label>
                                    <select name="pr_status" class="form-select border-dark">
                                        <option value="Pending" <%= data.pr_status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                        <option value="Approved" <%= data.pr_status === 'Approved' ? 'selected' : '' %>>Approved</option>
                                        <option value="Rejected" <%= data.pr_status === 'Rejected' ? 'selected' : '' %>>Rejected</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4 border-end">
                                <h5 class="text-secondary">Sourcing Request</h5>
                                <div class="mb-3">
                                    <label>SR Number</label>
                                    <input type="text" class="form-control" value="<%= data.sr_number || 'N/A' %>" disabled>
                                </div>
                                <div class="mb-3">
                                    <label>SR Status</label>
                                    <select name="sr_status" class="form-select border-dark" <%= !data.sr_number ? 'disabled' : '' %>>
                                        <option value="In Progress" <%= data.sr_status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                                        <option value="Completed" <%= data.sr_status === 'Completed' ? 'selected' : '' %>>Completed</option>
                                        <option value="Closed" <%= data.sr_status === 'Closed' ? 'selected' : '' %>>Closed</option>
                                    </select>
                                    <% if(data.sr_number) { %>
                                        <input type="hidden" name="sr_number" value="<%= data.sr_number %>">
                                    <% } %>
                                </div>
                                <div class="mb-3">
                                    <label>Start Date</label>
                                    <input type="date" name="sr_start" class="form-control" value="<%= data.sr_start ? data.sr_start.toISOString().split('T')[0] : '' %>">
                                </div>
                                <div class="mb-3">
                                    <label>End Date</label>
                                    <input type="date" name="sr_end" class="form-control" value="<%= data.sr_end ? data.sr_end.toISOString().split('T')[0] : '' %>">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h5 class="text-secondary">Purchase Order</h5>
                                <div class="mb-3">
                                    <label>PO Number</label>
                                    <input type="text" class="form-control" value="<%= data.po_number || 'N/A' %>" disabled>
                                </div>
                                <div class="mb-3">
                                    <label>PO Status</label>
                                    <select name="po_status" class="form-select border-dark" <%= !data.po_number ? 'disabled' : '' %>>
                                        <option value="New" <%= data.po_status === 'New' ? 'selected' : '' %>>New</option>
                                        <option value="Sent" <%= data.po_status === 'Sent' ? 'selected' : '' %>>Sent</option>
                                        <option value="Completed" <%= data.po_status === 'Completed' ? 'selected' : '' %>>Completed</option>
                                    </select>
                                    <% if(data.po_number) { %>
                                        <input type="hidden" name="po_number" value="<%= data.po_number %>">
                                    <% } %>
                                </div>
                                <div class="mb-3">
                                    <label>Start Shipping</label>
                                    <input type="date" name="po_start" class="form-control" value="<%= data.po_start ? data.po_start.toISOString().split('T')[0] : '' %>">
                                </div>
                                <div class="mb-3">
                                    <label>Est. Arrival</label>
                                    <input type="date" name="po_end" class="form-control" value="<%= data.po_end ? data.po_end.toISOString().split('T')[0] : '' %>">
                                </div>
                            </div>
                        </div>

                        <hr>
                        <div class="d-flex justify-content-end gap-2">
                            <a href="/status/pr-po" class="btn btn-secondary rounded-pill px-4">Cancel</a>
                            <button type="submit" class="btn btn-retro rounded-pill px-4">Update All Status</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>